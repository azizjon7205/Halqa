<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.fragment.HomeFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="353dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toTopOf="@+id/button_lotincha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="readingabook.json"/>

    <Button
        android:id="@+id/button_lotincha"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/app_main_gradient"
        android:text="@string/app_lotincha"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.831" />

    <Button
        android:id="@+id/button_kirilcha"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/app_main_gradient"
        android:text="@string/app_kirilcha"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.923" />

</androidx.constraintlayout.widget.ConstraintLayout>